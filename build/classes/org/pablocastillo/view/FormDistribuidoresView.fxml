      <TextField fx:id="tfDireccion" layoutX="32.0" layoutY="295.0" prefHeight="30.0" prefWidth="300.0" />
      <TextField fx:id="tfNombre" layoutX="32.0" layoutY="217.0" prefHeight="30.0" prefWidth="300.0" />
      <TextField fx:id="tfTelefono" layoutX="32.0" layoutY="453.0" prefHeight="30.0" prefWidth="300.0" />
      <TextField fx:id="tfNit" layoutX="32.0" layoutY="375.0" prefHeight="30.0" prefWidth="300.0" />
