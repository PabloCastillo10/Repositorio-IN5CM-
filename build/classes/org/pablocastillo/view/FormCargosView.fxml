<AnchorPane id="AnchorPane" prefHeight="750.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.pablocastillo.controller.FormCargosController">
   <children>
      <ImageView fitHeight="750.0" fitWidth="500.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/FondoFormCargo.png" />
         </image>
      </ImageView>
      <TextArea fx:id="taDescripcionCargo" layoutX="38.0" layoutY="411.0" prefHeight="200.0" prefWidth="341.0" wrapText="true" />
      <TextField fx:id="tfNombreCargo" layoutX="35.0" layoutY="281.0" prefHeight="36.0" prefWidth="240.0" />
      <TextField fx:id="tfCargoId" editable="false" layoutX="35.0" layoutY="160.0" prefHeight="36.0" prefWidth="240.0" />
      <GridPane layoutX="29.0" layoutY="636.0" prefHeight="89.0" prefWidth="244.0">
         <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Button fx:id="btnGuardar" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="65.0" prefWidth="99.0" text="Guardar" />
            <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="65.0" prefWidth="99.0" text="Cancelar" GridPane.columnIndex="1" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
